@model Product
<div class="container-fluid">
</div>

<div class="d-sm-flex align-items-center justify-content-between mb-4">
	<h1 class="h3 mb-0 text-gray-800">House Create</h1>
</div>
<div class="row justify-content-center">
	<div class="col-md-8">
		<form asp-action="create" method="post" enctype="multipart/form-data">
			<div class="row">
				<div class="form-group col-md-3">
					<label asp-for="Name">Name</label>
					<input asp-for="Name" class="form-control">
					<span class="text-danger" asp-validation-for="Name"></span>
				</div>
				<div class="col-md-3">
					<div class="form-group">
						<label asp-for="BrandId">Brand</label>
						<select class="form-control" asp-for="BrandId" asp-items="new SelectList(ViewBag.Brands,nameof(Brand.Id),nameof(Brand.Name))">
						</select>
						<span class="text-danger" asp-validation-for="BrandId"></span>
					</div>
				</div>
				<div class="col-md-3">
					<div class="form-group">
						<label asp-for="CategoryId">Category</label>
						<select class="form-control" asp-for="CategoryId" asp-items="new SelectList(ViewBag.Categories,nameof(Category.Id),nameof(Category.Name))">
						</select>
						<span class="text-danger" asp-validation-for="CategoryId"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-3">
					<div class="form-group">
						<label asp-for="Price">Price</label>
						<input asp-for="Price" class="form-control">
						<span class="text-danger" asp-validation-for="Price"></span>
					</div>
				</div>
				<div class="col-md-3">
					<div class="form-group">
						<label asp-for="Color">Color</label>
						<input asp-for="Color" class="form-control">
						<span class="text-danger" asp-validation-for="Color"></span>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-md-3">
					<div class="form-group">
						<label asp-for="Age">Age</label>
						<input asp-for="Age" class="form-control">
						<span class="text-danger" asp-validation-for="Age"></span>
					</div>
				</div>
				<div class="col-md-3">
					<div class="form-group">
						<label asp-for="Size">Size</label>
						<input asp-for="Size" class="form-control">
						<span class="text-danger" asp-validation-for="Size"></span>
					</div>
				</div>
				<div class="col-md-3">
					<div class="form-group">
						<label asp-for="Gender">Gender</label>
						<input asp-for="Gender" class="form-control">
						<span class="text-danger" asp-validation-for="Gender"></span>
					</div>
				</div>

			</div>
			<div class="row">
				<div class="col-md-3">
					<div class="form-group">
						<div class="custom-control custom-checkbox small">
							<input asp-for="IsDiscounted" type="checkbox" class="custom-control-input">
							<label class="custom-control-label" asp-for="IsDiscounted">
								Is Discounted
							</label>
						</div>
					</div>
				</div>
				<div class="form-group col-md-9">
					<label asp-for="Description">Desc</label>
					<textarea asp-for="Description" class="form-control"></textarea>
					<span class="text-danger" asp-validation-for="Description"></span>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label>Poster Image</label>
						<input asp-for="PosterFile" accept="image/*" class="form-control">
						<span class="text-danger" asp-validation-for="PosterFile"></span>
					</div>
				</div>
				<div class="form-group col-md-6">
					<label>Image Files</label>
					<input asp-for="ImageFiles" accept="image/*" class="form-control" placeholder="Enter ImageFile">
					<span class="text-danger" asp-validation-for="ImageFiles"></span>
				</div>
			</div>
			<div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</form>
	</div>
</div>
