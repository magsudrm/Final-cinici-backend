@using CiniciFinal.Enums;
@inject CiniciFinal.Service.LayoutService layoutService
@{
    AppUser user = await layoutService.GetUserFullName();

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Dashboard - SB Admin</title>

    <!-- Bootstrap core CSS -->
    <link href="~/manage/assets/css/bootstrap.css" rel="stylesheet">

    <!-- Add custom CSS here -->
    <link href="~/manage/assets/css/sb-admin.css" rel="stylesheet">
    <link rel="stylesheet" href="~/manage/assets/font-awesome/css/font-awesome.min.css">
    <!-- Page Specific CSS -->
    <link rel="stylesheet" href="http://cdn.oesmith.co.uk/morris-0.4.3.min.css">
</head>
<body>
        <div id="wrapper">

      <!-- Sidebar -->
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="index.html">SB Admin</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
          <ul class="nav navbar-nav side-nav">
            <li class="active"><a asp-area="manage" asp-controller="dashboard" asp-action="index" ><i class="fa fa-dashboard"></i> Dashboard</a></li>
                    <li class="active"><a asp-area="manage" asp-controller="Product" asp-action="index"><i class="fa fa-dashboard"></i>Product</a></li>
                    <li class="active"><a asp-area="manage" asp-controller="Setting" asp-action="index"><i class="fa fa-dashboard"></i>Setting</a></li>
                    <li class="active"><a asp-area="manage" asp-controller="Brand" asp-action="index"><i class="fa fa-dashboard"></i> Brand</a></li>
                    <li class="active"><a asp-area="manage" asp-controller="Category" asp-action="index"><i class="fa fa-dashboard"></i> Category</a></li>
                    <li class="active"><a asp-area="manage" asp-controller="Collection" asp-action="index"><i class="fa fa-dashboard"></i>Collection</a></li>
                    <li class="active"><a asp-area="manage" asp-controller="Focus" asp-action="index"><i class="fa fa-dashboard"></i>Focus</a></li>
                    <li class="active"><a asp-area="manage" asp-controller="Slider" asp-action="index"><i class="fa fa-dashboard"></i>Slider</a></li>






                </ul>

          <ul class="nav navbar-nav navbar-right navbar-user">
            <li class="dropdown user-dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>@user.FullName <b class="caret"></b></a>
              <ul class="dropdown-menu">
                  @if (User.IsInRole(Roles.Superadmin.ToString()))
                                        {
                                <li><a asp-area="manage" asp-controller="AdminRegister" asp-action="Register"><i class="fa fa-gear"></i>Add New Admin</a></li>
                                   

                                        }
                <li class="divider"></li>
                            <li><a asp-area="manage" asp-controller="adminlogin" asp-action="LogOut"><i class="fa fa-power-off"></i> Log Out</a></li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </nav>
      @RenderBody()

    </div><!-- /#wrapper -->

    <!-- JavaScript -->
    <script src="~/manage/assets/js/jquery-1.10.2.js"></script>
    <script src="~/manage/assets/js/bootstrap.js"></script>

    <!-- Page Specific Plugins -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="http://cdn.oesmith.co.uk/morris-0.4.3.min.js"></script>
    <script src="~/manage/assets/js/morris/chart-data-morris.js"></script>
    <script src="~/manage/assets/js/tablesorter/jquery.tablesorter.js"></script>
    <script src="~/manage/assets/js/tablesorter/tables.js"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.6.3/js/all.js" integrity="sha384-EIHISlAOj4zgYieurP0SdoiBYfGJKkgWedPHH4jCzpCXLmzVsw1ouK59MuUtP4a1" crossorigin="anonymous"></script>
    @RenderSection("Scripts",false)

</body>
</html>
