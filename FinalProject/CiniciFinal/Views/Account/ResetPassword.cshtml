@model AccountVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/assets/bootstrap-5.3.0-alpha1-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/main.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="icon" type="image/png" sizes="194x194"
          href="https://www.papajohns.az/img/content/favicon/favicon-194x194.png">

    <title>ResetPassword</title>
</head>
<body style="background:#2A0201">
    <div class="container" style="
         margin-top: 200px;">

        <div class="image">
            <img src="https://www.qsrmagazine.com/sites/default/files/styles/story_page/public/story/founder-john-schnatter-exit-papa-john-s-board-1551799390.jpg?itok=IoGhRnYx" class="carpool_logo" width="300" height="300" style="	display: block;
	margin: 0 auto;
margin: 30px auto;">
        </div>
        <h1 class="text-center text-light">Şifrəni Yeniləmək</h1>
        <form method="post">

            <div class="row justify-content-center">
                <div class="mt-3 col-8">
                    <label class="text-light">Yeni Şifrəni girin</label>
                    <input asp-for="Password" class="form-control">
                </div>
                <div class="d-none">
                    <input asp-for="Token" class="form-control" readonly>
                    <input asp-for="User.Email" class="form-control" readonly>
                </div>
                <div class="mt-3 col-8">
                    <label class="text-light">Şifrə təkrar</label>
                    <input asp-for="ConfirmPassword" class="form-control">
                </div>
                <div class="col-8 text-center">
                    <button type="submit" class="btn btn-danger mt-3">Change Password</button>
                </div>
            </div>
        </form>
    </div>

</body>
</html>